<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddProductFragment"
    android:background="@drawable/blue_background">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="#3aaa"

           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/nameProductToAdd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:hint="ID" />

                <EditText
                    android:id="@+id/idProductToAdd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/nameProductToAdd"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="93dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:hint="Name" />

                <EditText
                    android:id="@+id/colorProductToAdd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:hint="Color" />

                <EditText
                    android:id="@+id/modelProductToAdd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="188dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:hint="Model" />

                <EditText
                    android:id="@+id/quantityProductToAdd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentTop="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="237dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:hint="Quantity " />


                <EditText
                    android:id="@+id/prixProductToAdd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginBottom="263dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:hint="Prix" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/addproductButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="153dp"
            android:layout_marginLeft="153dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/addsymbole" />

    </RelativeLayout>

</FrameLayout>